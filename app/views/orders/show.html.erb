<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @order.phone %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

<p>
  <strong>Total price:</strong>
  <% total_price = 0 %>
    
    <% @order.ordered_books.each do |ordered_book| %>
      <% total_price += ordered_book.book.price * ordered_book.quantity %>
    <% end %>

  <%= total_price %>
</p>

