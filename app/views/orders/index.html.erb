<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Title</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.email %></td>
        <td><%= order.title %></td>
        <td><%= order.phone %></td>
        <td><%= order.address %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to raw(icon(:search)), order, title: 'Show' %></td>
        <td><%= link_to raw(icon(:pencil)), edit_order_path(order), title: 'Edit' %></td>
        <td><%= link_to raw(icon(:trashcan)), order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

