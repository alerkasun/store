<p>
  <strong>Cover:</strong>
  <%= image_tag @book.cover.url(:small) %>
</p>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cover %><br>
    <%= f.file_field :cover %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.collection_select :genre_id, Genre.order(:name),:id, :name, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :authors %><br>
    <%= f.collection_select :author_ids, Author.order(:last_name), :id, :full_name, {}, { :multiple => true, :size =>10 } %>
  </div>
  <div class="field">
    <%= f.label :publisher %><br>
    <%= f.collection_select :publisher_id, Publisher.order(:name),:id, :name, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :publication_year %><br>
    <%= f.number_field :publication_year %>
  </div>
  <div class="field">
    <%= f.label :page_count %><br>
    <%= f.number_field :page_count %>
  </div>
  <div class="field">
    <%= f.label :storages %><br>
    
    <%= f.fields_for :book_storages do |bs| %>
      <%= bs.collection_select :storage_id, Storage.order(:name), :id, :name, include_blank: true %>
      <%= bs.number_field :amount %>
      <%= bs.check_box '_destroy' %>
      Delete
      <br/>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
