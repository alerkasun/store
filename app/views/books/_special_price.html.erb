<% for book in books %>

  <p id="notice"><%= notice %></p>

  <div class="col-md-4">
    <h2><%= book.title %></h2>
       <%= image_tag book.cover.url(:small), :class => "img-thumbnail", :style => "float :left; margin-right: 20px" %>
    <p>
      <strong>Authors:</strong>
        <% book.authors.each do |author| %>
          <%= "#{author.last_name} #{author.first_name} " %>
        <% end %>
    </p>

    <p>
      <strong>Genre:</strong>
      <%= book.genre.name %>
    </p>

    <p>
      <strong>Publisher:</strong>
      <%= book.publisher.name %>
    </p>

    <p>
      <strong><strike>Price:</strong>
      <%= book.price %></strike>
      <br>
      <font color="red">
      <strong>Special price:</strong>
      <%= book.special_price %>
    </font>
    </p>
    
    <p>
      <%= link_to 'View details', book, :class => "btn btn-default" %>
    </p>

  </div>
<% end %>
