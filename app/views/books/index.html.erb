<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>
<p><%= session[:cart] %></p>
<p><%= session[:cart].keys.size %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Publication year</th>
      <th>Page count</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.cover %></td>
        <td><%= book.title %></td>
        <td><%= book.publication_year %></td>
        <td><%= book.page_count %></td>
        <td><%= book.price %></td>
        <td><%= button_to 'Add to Cart', add_to_cart_books_path(book_id: book.id) %></td>
        <td><%= link_to raw(icon(:search)), book, title: 'Show' %></td>
        <td><%= link_to raw(icon(:pencil)), edit_book_path(book), title: 'Edit' %></td>
        <td><%= link_to raw(icon(:trashcan)), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
